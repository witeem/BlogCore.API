  "version": "0.2.0",
  "configurations": [
    {
      "name": "BlogCore.Web",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/BlogCore/bin/Debug/netcoreapp3.1/BlogCore.dll",
      "args": [],
      "cwd": "${workspaceFolder}/BlogCore",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}